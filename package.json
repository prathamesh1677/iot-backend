{
  "name": "iot-sensor-api",
  "version": "1.0.0",
  "description": "Node.js backend service for IoT sensor temperature readings with MongoDB and MQTT",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "start:memory": "cross-env MONGODB_URI=memory node src/server.js",
    "dev:memory": "cross-env MONGODB_URI=memory node --watch src/server.js",
    "test:db": "node scripts/test-connection.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "iot",
    "sensor",
    "mongodb",
    "mqtt",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "mongodb-memory-server": "^9.1.3",
    "mqtt": "^5.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
